Global {
    edge=top
    allign=center
    margin=0
    widthtype=percent
    width=100
    height=24
    transparent=1
    tintcolor=#351a0a
    alpha=255
    autohide=0
    heightwhenhidden=2
    setdocktype=0
    setpartialstrut=1
