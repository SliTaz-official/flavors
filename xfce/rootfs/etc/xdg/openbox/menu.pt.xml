<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<!-- Aplicações Favoritas -->
<menu id="favorites-menu" label="Aplicativos Favoritos">
  <item label="Gerenciador de Arquivos">
    <action name="Execute"><command>pcmanfm</command></action>
  </item>
  <item label="Terminal">
    <action name="Execute"><command>terminal</command></action>
  </item>
  <item label="Navegador Web">
    <action name="Execute"><command>browser</command></action>
  </item>
  <item label="Editor de Texto">
    <action name="Execute"><command>editor</command></action>
  </item>
  <separator />
  <item label="Configure favorite">
    <action name="Execute"><command>desktopbox tazapps</command></action>
  </item>
</menu>

<!-- Desktop files -->
<menu id="desktop-menu" label="Arquivos &amp; Ícones do Desktop">
  <item label="Criar nova pasta">
    <action name="Execute"><command>desktopbox new-folder</command></action>
  </item>
  <item label="Criar novo arquivo">
    <action name="Execute"><command>desktopbox new-file</command></action>
  </item>
  <separator />
  <item label="Adicionar novo ícone">
    <action name="Execute"><command>desktopbox add-icons</command></action>
  </item>
</menu>

<!-- Efeitos do Desktop -->
<menu id="desktop-effects" label="Efeitos Visuais">
  <item label="Ativar composite">
    <action name="Execute"><command>xcompmgr</command></action>
  </item>
  <item label="Ativar sombreamento">
    <action name="Execute"><command>xcompmgr -c -r 10</command></action>
  </item>
  <item label="Ativar sombreamento/fade">
    <action name="Execute"><command>xcompmgr -c -f -r 10</command></action>
  </item>
  <separator />
  <item label="Definir opacidade (atual)">
    <action name="Execute">
      <command>transset-df --actual --max 60</command>
    </action>
  </item>
  <item label="Definir opacidade (click)">
    <action name="Execute">
      <command>transset-df --click --max 60</command>
    </action>
  </item>
  <separator />
  <item label="Parar efeitos">
    <action name="Execute"><command>killall xcompmgr</command></action>
  </item>
</menu>

<!-- SliTaz Live (Tazlito e Tazusb) -->
<menu id="slitaz-live-menu" label="SliTaz Live CD/USB">
  <item label="Tazlito Ferramenta LiveCD">
    <action name="Execute"><command>subox tazlitobox</command></action>
  </item>
  <item label="TazUSB LiveUSB Tool">
    <action name="Execute"><command>subox tazusbbox</command></action>
  </item>
  <separator />
  <item label="TazUSB Writefs (gzip)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs gzip"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (lzma)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs lzma"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (none)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs none"</command>
    </action>
  </item>
</menu>

<!-- Configuração do Openbox -->
<menu id="openbox-menu" label="Openbox">
  <item label="Configuração do Openbox (GUI)">
    <action name="Execute"><command>obconf</command></action>
  </item>
  <item label="Aplicações autoiniciadas">
    <action name="Execute">
      <command>desktopbox autostart</command>
    </action>
  </item>
  <item label="Menu do Openbox">
    <action name="Execute">
      <command>editor ~/.config/openbox/menu.xml</command>
    </action>
  </item>
  <separator />
  <item label="Reconfigurar">
    <action name="Reconfigure" />
  </item>
  <item label="Reiniciar">
    <action name="Restart" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <!-- <separator label="SliTaz Openbox" /> -->
  <menu id="favorites-menu" />
  <menu id="desktop-menu" />
  <!-- Pipe menu to open folder using GTK bookmarks -->
  <menu id="open-folder-menu" label="Locais Favoritos"
        execute="/usr/lib/openbox/open-folder-menu.sh" />
  <menu id="desktop-effects" />
  <menu id="slitaz-live-menu" />
  <menu id="openbox-menu" />
  <menu id="client-list-menu" />
  <separator />
  <item label="Sair">
    <action name="Execute"><command>desktopbox logout</command></action>
  </item>
</menu>

</openbox_menu>
